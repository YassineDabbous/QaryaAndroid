<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:id="@+id/h">


    <LinearLayout
        android:background="@drawable/rounded_bottom_end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/upicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_white"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/name"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Muhammed Ameen"/>

            <TextView
                android:id="@+id/categoryName"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not defined"
                tools:text="@string/users"/>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/setingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/settings_outline"
        android:background="@color/transparent"
        android:tint="@color/white"
        android:layout_margin="12dp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>