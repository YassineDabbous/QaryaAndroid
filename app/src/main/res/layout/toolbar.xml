<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:background="?myTheme_toolbar_background"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:tint="?myTheme_color_inverse"
        android:id="@+id/toolbar_right"
        app:srcCompat="@drawable/ic_dots"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>


    <ImageView
        android:visibility="invisible"
        tools:visibility="visible"
        android:tint="?myTheme_color_inverse"
        android:id="@+id/toolbar_right_2"
        app:srcCompat="@drawable/exo_icon_play"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_toLeftOf="@+id/toolbar_right"
        android:layout_toStartOf="@id/toolbar_right"/>

    <ImageView
        android:rotation="@integer/locale_mirror_flip"
        android:tint="?myTheme_color_inverse"
        android:id="@+id/toolbar_left"
        app:srcCompat="@drawable/ef_ic_arrow_back"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:visibility="invisible"
        tools:visibility="visible"
        android:tint="?myTheme_color_inverse"
        android:id="@+id/toolbar_left_2"
        app:srcCompat="@drawable/store"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_toRightOf="@+id/toolbar_left"
        android:layout_toEndOf="@id/toolbar_left"/>


    <TextView
        android:textColor="?myTheme_color_inverse"
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:layout_toStartOf="@id/toolbar_right_2"
        android:layout_toEndOf="@id/toolbar_left_2"
        android:layout_toLeftOf="@id/toolbar_right_2"
        android:layout_toRightOf="@id/toolbar_left_2"
        android:gravity="center"
        android:textStyle="bold"
        style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="14sp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeStepGranularity="2sp"
        android:ellipsize="end"
        android:maxLines="1"/>


</RelativeLayout>